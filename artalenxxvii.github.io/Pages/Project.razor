<div class="card mt-2 mb-2">
    <div class="card-body">
        <h6 class="mb-n2 ml-lg-1"> <img src="/Images/work.png" alt="Admin" class="rounded-circle" width="30"> <b> WORK EXPERIENCED </b></h6>
        <hr />

        <div class="row card-group">
            <div class="row d-flex flex-wrap col-sm-11">
                <div class="card-body mt-n4">
                    @foreach (var p in project)
                    {
                        <div>
                            <table class="border-bottom w-100">
                                <tr>
                                    <td rowspan="4" valign="top" align="left" width="10px">
                                        <h5 class="ml-lg-2">►</h5>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <b class="d-inline">
                                            @p.Name
                                        </b><br />
                                        <p>
                                            @p.Year
                                        </p>
                                    </td>
                                    <td>
                                        <b>
                                            @p.Desciption
                                        </b>
                                        <p>
                                            @p.Position
                                        </p>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="2">
                                        <p>
                                            <b>
                                                Project -
                                            </b>
                                            @p.ProjectName <br />

                                            @p.ProjectNameDescription
                                        </p>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="2">
                                        <p>
                                            <b>
                                                Tools -
                                            </b>
                                            @p.Tools
                                        </p>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {

    class Projects
    {
        public string Name { get; set; }
        public string Desciption { get; set; }
        public string Year { get; set; }
        public string Position { get; set; }
        public string ProjectName { get; set; }
        public string ProjectNameDescription { get; set; }
        public string Tools { get; set; }
    }

    List<Projects> project = new List<Projects>
{
         new Projects { Name = "Jyosna Inc.", Desciption="Financial Technology Software Solution", Year="October 2019 - Current",
             Position="Software Engineer", ProjectName="Jyosna Enterprise Management(Web App)", ProjectNameDescription="Using ASP.NET Webform and C# | Javascript and jQuery",
             Tools="Visual Studio, SQL Server Management Studio and IIS Web Service"},

         new Projects { Name = "Hilsoft Inc.", Desciption="Software Development Solution", Year="December 2018 - October 2019",
             Position="Software Engineer", ProjectName="Property Management System (Web App and Web API(REST))", ProjectNameDescription="Using ASP.NET MVC, Web API and C# | Javascript, AJAX, Bootstrap and jQuery",
             Tools="Visual Studio, GIT, Crystal Report, Postman(for API),Anydesk(for remote server) SQL Server Management Studio and IIS Web Service"},

         new Projects { Name = "Anderson Group BPO Inc.", Desciption="BPO services I.T Solution", Year="March - June 2018",
             Position="Web Developer(Intern)", ProjectName="Inventory System(Internal System(Web App))", ProjectNameDescription="Using ASP.NET MVC and C# | Angular JS",
             Tools="Visual Studio, SQL Server Management Studio and IIS Web Service"}
    };

}
