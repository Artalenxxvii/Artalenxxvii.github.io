<div class="card mt-2 mb-2">
    <div class="card-body">
        <h6 class="mb-n2 ml-lg-1"> <img src="/Images/educ.png" alt="Admin" class="rounded-circle" width="30"> <b> EDUCATION </b></h6>
        <hr />

        <div class="row card-group">
            <div class="row d-flex flex-wrap col-sm-11">
                <div class="card-body mt-n4">
                    <p> <b>Bachelor of Science in Information Technology</b></p>
                    @foreach (var p in project)
                    {
                        <div>
                            <table class="w-100">
                                <tr>
                                    <td rowspan="3" valign="top" align="left">
                                        <h5 class="ml-2">►</h5>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <b >
                                            @p.Name
                                        </b><br />
